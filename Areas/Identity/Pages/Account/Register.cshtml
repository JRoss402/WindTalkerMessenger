@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}
<div class="registerContainer">
	<div class="text-center">
		<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h2>Create a new account.<span class="cursor"></span></h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="registerFormGroups">
				<label asp-for="Input.Email"></label>
				<input asp-for="Input.Email" autocomplete="username" aria-required="true" />
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="registerFormGroups">
				<label asp-for="Input.Password"></label>
				<input asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="registerFormGroups">
				<label asp-for="Input.ConfirmPassword"></label>
				<input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<div class="registerFormGroups">
				<label asp-for="Input.ChatName"></label>
				<input asp-for="Input.ChatName" autocomplete="userusername" aria-required="true" />
				<span asp-validation-for="Input.ChatName" class="text-danger"></span>
			</div>
			<button id="sendButton" type="submit">Register</button>
		</form>
	</div>
</div>
</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
